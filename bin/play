#!/bin/bash -eu
if [[ "$1" == "update" ]]; then
    echo "enter your SSH password so you don't have to enter it for every single repo"
    ssh-add
    echo ""
    for folder in $(<$HOME/.bin/playrepos.txt); do
        echo "updating repo in $folder"
        cd "$folder" && git pull origin master || true
        cd "$folder" && git push origin master || true
        echo ""
    done
fi
